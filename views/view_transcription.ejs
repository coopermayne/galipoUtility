<%- include('layouts/layout_header') %>

<div class="top-links">
  <a href="/transcribe" class="back-link">Back</a>
  <form action="/transcribe/<%= transcription[datastore.KEY].name %>/delete" method="POST" class="delete-form">
    <button type="submit" class="delete-btn">Delete</button>
  </form>
</div>


<div class="metadata">
  <p><strong>Original File Name:</strong> <%= transcription.originalFileName || '' %></p>
  <p><strong>Transcription Status:</strong> <%= transcription.transcriptionStatus ? 'Complete' : 'Processing' %></p>
  <p><strong>Notes:</strong> <%= transcription.notes || '' %></p>
</div>

<div class="transcription">
  <%- transcription.transcriptionHtml %>
</div>


<audio controls id="audioPlayer" style="width: 100%;">
  <source src="<%= transcription.audioFileHttp %>" type="audio/wav">
  Your browser does not support the audio element.
</audio>


<%- include('layouts/layout_footer') %>
