<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="css/main.css">
</head>
<body>
  <h1>Transcribe</h1>

  <form action="/transcribe" method="post" enctype="multipart/form-data">
    <input type="file" name="audio" accept="audio/*" required>
    <button type="submit">Transcribe</button>
  </form>

  <table>
    <tr>
      <th>Original File Name</th>
      <th>Transcription Status</th>
      <th>Notes</th>
      <th>Actions</th>
    </tr>
    <% transcriptions.forEach(transcription => { %>
      <tr>
        <td><%= transcription.originalFileName || '' %></td>
        <td><%= transcription.transcriptionStatus ? 'Complete' : 'Processing' %></td>
        <td><%= transcription.notes || '' %></td>
        <td>
          <a href="/transcribe/<%= transcription[datastore.KEY].name %>">View</a>
        </td>
      </tr>
    <% }); %>
  </table>

  <script src="js/socket.io.js"></script>
  <script src="js/transcribe.js"></script>
</body>
</html>
